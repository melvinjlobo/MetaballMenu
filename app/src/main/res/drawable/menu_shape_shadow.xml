<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#13000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item
        android:id="@+id/shape_foreground"
        android:bottom="3dp"
        android:left="1dp"
        android:right="1dp" >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_purple" />
            <stroke android:width="1dp" android:color="#13000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>